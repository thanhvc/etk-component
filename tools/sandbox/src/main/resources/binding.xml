<binding>
  <!-- the default deserializer to use for String -->
  <format type="java.lang.String" deserializer="org.etk.sandbox.entity.plugins.model.xml.Deserializer.resolveString"/>
 <!-- configuration entity mapping -->
  <mapping name="fieldtypemodel" class="org.etk.sandbox.entity.plugins.model.xml.FieldTypeModel" pre-get="preGet">
   <collection item-type="org.etk.sandbox.entity.plugins.model.xml.FieldType" usage="optional" add-method="addFieldType" iter-method="getFieldTypeIterator" test-method="hasFieldType"/>
  </mapping>
  <!-- fieldtype object mapping -->
  <mapping name="field-type-def" class="org.etk.sandbox.entity.plugins.model.xml.FieldType">
    <value name="type"  field="type" style="attribute"/>
    <value name="sql-type"  field="sqlType" style="attribute"/>
    <value name="java-type"  field="javaType" style="attribute"/>
  </mapping>
 
  <!-- configuration object mapping -->
  <mapping name="configuration" class="org.etk.sandbox.entity.plugins.model.xml.Configuration">
    <collection item-type="org.etk.sandbox.entity.plugins.model.xml.FieldTypeModel" usage="optional" add-method="addFieldTypeModel" iter-method="getFieldTypeModelIterator" test-method="hasFieldTypeModel"/>
    
  </mapping> 
</binding>
