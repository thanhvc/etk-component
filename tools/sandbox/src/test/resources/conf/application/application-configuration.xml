<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
	xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">
	 <component>
      <key>org.etk.component.base.naming.InitialContextInitializer</key>
      <type>org.etk.component.base.naming.InitialContextInitializer</type>
      <component-plugins>
         <component-plugin>
            <name>bind.datasource</name>
            <set-method>addPlugin</set-method>
            <type>org.etk.component.base.naming.BindReferencePlugin</type>
            <init-params>
               <value-param>
                  <name>bind-name</name>
                  <value>jdbcjcr</value>
               </value-param>
               <value-param>
                  <name>class-name</name>
                  <value>javax.sql.DataSource</value>
               </value-param>
               <value-param>
                  <name>factory</name>
                  <value>org.apache.commons.dbcp.BasicDataSourceFactory</value>
               </value-param>
               <properties-param>
                  <name>ref-addresses</name>
                  <description>ref-addresses</description>
                  <property name="driverClassName" value="org.postgresql.Driver" />
                  <property name="url" value="jdbc:postgresql://localhost/portal"/>
                  <property name="username" value="root" />
                  <property name="password" value="gtn" />
               </properties-param>
            </init-params>
         </component-plugin>
      </component-plugins>
      <init-params>
         <properties-param>
            <name>default-properties</name>
            <description>Default initial context properties</description>
            <property name="java.naming.factory.initial" value="org.etk.component.base.naming.SimpleContextFactory" />
         </properties-param>
         <!--
         <properties-param>
            <name>mandatory-properties</name>
            <description>Mandatory initial context properties</description>
            <property name="java.naming.factory.initial" value="org.exoplatform.services.naming.SimpleContextFactory" />
            <property name="java.naming.provider.url" value="rmi://localhost:9999" />
         </properties-param>
         -->
      </init-params>
   </component>
	<component>
      <key>org.etk.component.base.transaction.TransactionService</key>
      <type>org.etk.component.base.transaction.impl.jotm.TransactionServiceJotmImpl</type>
      <init-params>
         <value-param>
            <name>timeout</name>
            <value>5</value>
         </value-param>
      </init-params>
   </component>
   <component>
    <key>org.etk.component.database.DatabaseService</key>
    <type>org.etk.component.database.impl.XAPoolTxSupportDatabaseService
    </type>
    <init-params>
      <properties-param>
        <name>default</name>
        <description>Connection configuration</description>
        <property name='connection.driver' value='org.postgresql.Driver' />
        <property name='connection.url' value='jdbc:postgresql://localhost/dbcreator1' />
        <property name='connection.login' value='root' />
        <property name='connection.password' value='gtn' />
        <property name='connection.min-size' value='3' />
        <property name='connection.max-size' value='5' />
      </properties-param>
    </init-params>
  </component>
	<component>
    <key>org.etk.sandbox.entity.plugins.jdbc.DatabaseManager</key>
    <type>org.etk.sandbox.entity.plugins.jdbc.DatabaseManager</type>
  </component>
	
	<component>
		<key>org.etk.sandbox.entity.plugins.config.DatasourceConfig</key>
		<type>org.etk.sandbox.entity.plugins.config.DatasourceConfig</type>
		<init-params>
			<value-param>
				<name>db-connection</name>
				<value>postgresql-connection</value>
			</value-param>
			<properties-param>
				<name>postgresql-connection</name>
				<description>postgresql database connection properties</description>
				<property name="helper-class" value="org.ofbiz.entity.datasource.GenericHelperDAO" />
				<property name="schema-name" value="public" />
				<property name="entity-model-file" value="conf/application/entitymodel.xml" />
				<property name="field-type-name" value="postgres" />
				<property name="check-on-start" value="true" />
				<property name="add-missing-on-start" value="true" />
				<property name="use-fk-initially-deferred" value="false" />
				<property name="alias-view-columns" value="false" />
				<property name="join-style" value="ansi" />
				<property name="use-binary-type-for-blob" value="true" />
				<property name="use-order-by-nulls" value="true" />
				<property name="jdbc-driver" value="org.postgresql.Driver" />
				<property name="jdbc-uri" value="jdbc:postgresql://localhost/dbcreator1" />
				<property name="jdbc-username" value="root" />
				<property name="jdbc-password" value="gtn" />
				<property name="pool-minsize" value="2" />
				<property name="pool-maxsize" value="250" />
				<property name="time-between-eviction-runs-millis" value="600000" />
			</properties-param>
			<properties-param>
				<name>mysql-connection</name>
				<description>mysql database connection properties</description>
				<property name="helper-class" value="org.ofbiz.entity.datasource.GenericHelperDAO" />
				<property name="field-type-name" value="mysql" />
				<property name="check-on-start" value="true" />
				<property name="add-missing-on-start" value="true" />
				<property name="check-pks-on-start" value="false" />
				<property name="use-foreign-keys" value="true" />
				<property name="alias-view-columns" value="false" />
				<property name="drop-fk-use-foreign-key-keyword" value="true" />
				<property name="table-type" value="InnoDB" />
				<property name="character-set" value="latin1" />
				<property name="collate" value="latin1_general_cs" />
				<property name="jdbc-driver" value="com.mysql.jdbc.Drive" />
				<property name="jdbc-uri" value="jdbc:mysql://127.0.0.1/dbcreator1?autoReconnect=true" />
				<property name="jdbc-username" value="root" />
				<property name="jdbc-password" value="gtn" />
				<property name="isolation-level" value="ReadCommitted" />
				<property name="pool-minsize" value="2" />
				<property name="pool-maxsize" value="250" />
				<property name="time-between-eviction-runs-millis" value="600000" />
			</properties-param>
		</init-params>
	</component>
	
	<component>
		<key>org.etk.sandbox.entity.plugins.config.FieldTypeConfig</key>
		<type>org.etk.sandbox.entity.plugins.config.FieldTypeConfig</type>
		<init-params>
			<value-param>
				<name>postgres</name>
				<value>entityconf/fieldtype/fieldtypepostgres.xml</value>
			</value-param>
			<value-param>
				<name>mysql</name>
				<value>entityconf/fieldtype/fieldtypemysql.xml</value>
			</value-param>
			<value-param>
				<name>oracle</name>
				<value>entityconf/fieldtype/fieldtypeoracle.xml</value>
			</value-param>
			<value-param>
				<name>mssql</name>
				<value>entityconf/fieldtype/fieldtypemssql.xml</value>
			</value-param>
		</init-params>
	</component>
	
	<external-component-plugins>
    <target-component>org.etk.service.foo.spi.FooService</target-component>
    <component-plugin>
      <name>MockFooBarPublisher</name>
      <set-method>addFooListener</set-method>
      <type>org.etk.sandbox.service.MockFooBarPublisher</type>
    </component-plugin>
  </external-component-plugins>
  
 
</configuration>

